{
  "name": "scry-cdn-service",
  "version": "1.0.0",
  "description": "Multi-platform CDN service for static site hosting with R2 support",
  "type": "module",
  "scripts": {
    "dev:cloudflare": "cd cloudflare && wrangler dev --remote",
    "dev:cloudflare:local": "wrangler dev --config cloudflare/wrangler.toml",
    "dev:docker": "tsx watch docker/server.ts",
    "build": "tsup",
    "build:cloudflare": "tsup --entry.worker cloudflare/worker.ts --format esm --platform neutral",
    "build:docker": "tsup --entry.server docker/server.ts --format esm --platform node",
    "deploy:cloudflare": "bash -c 'cd cloudflare && wrangler deploy --env production'",
    "deploy:cloudflare:dev": "bash -c ' cd cloudflare && wrangler deploy --env development'",
    "deploy:setup": "bash scripts/deploy-cloudflare.sh",
    "deploy:check": "bash scripts/check-cloudflare-permissions.sh",
    "docker:build": "docker build -f docker/Dockerfile -t scry-cdn-service:latest .",
    "docker:run": "docker-compose -f docker/docker-compose.yml up",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [
    "cdn",
    "cloudflare",
    "workers",
    "r2",
    "hono",
    "static-hosting"
  ],
  "author": "Scry Team",
  "license": "MIT",
  "dependencies": {
    "firebase-admin": "^12.6.0",
    "hono": "^4.6.10",
    "jose": "^6.1.3",
    "pako": "^2.1.0",
    "unzipit": "^1.4.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@eslint/js": "^9.39.2",
    "@hono/node-server": "^1.13.7",
    "@types/node": "^22.9.3",
    "@types/pako": "^2.0.4",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "redis": "^4.7.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.0",
    "vitest": "^2.1.6",
    "wrangler": "^4.45.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
