# Platform Configuration
PLATFORM=cloudflare # cloudflare | docker

# Firebase Configuration
FIREBASE_PROJECT_ID=scry-dev-dashboard
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"scry-dev-dashboard",...}
FIREBASE_API_KEY=your-firebase-api-key

# Cloudflare-specific (automatically bound in Workers)
# STATIC_SITES (R2 bucket binding - configured in wrangler.toml)
# CDN_CACHE (KV namespace binding - configured in wrangler.toml)

# Docker/R2-specific
STORAGE_TYPE=r2 # r2 | filesystem
STORAGE_PATH=/data/static-sites
R2_BUCKET=scry-static-sites
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key

# Cache Configuration (Docker)
REDIS_URL=redis://localhost:6379
CACHE_TTL=86400 # 24 hours

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# CDN Configuration
ALLOWED_ORIGINS=*
MAX_FILE_SIZE=10485760 # 10MB
CACHE_CONTROL=public, max-age=31536000, immutable

# Domain Configuration
BASE_DOMAIN=mysite.com
SUBDOMAIN_PATTERN=view-*